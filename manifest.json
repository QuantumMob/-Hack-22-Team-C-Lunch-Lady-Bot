{
  "display_information": {
    "name": "Lunch Lady",
    "description": "Bot for QM Hackathon",
    "background_color": "#bf3b3d"
  },
  "features": {
    "bot_user": {
      "display_name": "Lunch Lady",
      "always_online": false
    },
    "slash_commands": [
      {
        "command": "/knowledge",
        "description": "Display some knowledge",
        "usage_hint": "[keyword|question]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "channels:history",
        "commands",
        "groups:history",
        "im:history",
        "im:read",
        "im:write",
        "mpim:history",
        "chat:write"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}